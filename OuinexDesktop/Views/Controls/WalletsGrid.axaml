<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="OuinexDesktop.Views.Controls.WalletsGrid">
	<Grid>
		<DataGrid>
			<DataGrid.Columns>
				<DataGridTextColumn Header="Token"/>
				<DataGridTextColumn Header="Amount"/>
				<DataGridTextColumn Header="USD Value"/>
				<DataGridTextColumn Header="USD Price"/>
				<DataGridTextColumn Header="Average buying price"/>
				<DataGridTextColumn Header="Profit and Loss"/>
			</DataGrid.Columns>
		</DataGrid>
		<StackPanel VerticalAlignment="Center"
					HorizontalAlignment="Center">
			<TextBlock Text="You must make a first deposit to see your assets"/>
			<DropDownButton Margin="3" 
							VerticalAlignment="Center"
							HorizontalAlignment="Center"
							Content="Make a deposit"/>
		</StackPanel>
	</Grid>
</UserControl>
