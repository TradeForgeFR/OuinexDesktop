<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		     xmlns:vm="clr-namespace:OuinexDesktop.ViewModels"
			 x:DataType="vm:MarketDepthViewModel"
             xmlns:controls="clr-namespace:OuinexDesktop.Views.Controls"
             x:Class="OuinexDesktop.Views.Shared.MarketDepth">
	<Design.DataContext>
		<vm:MarketDepthViewModel/>
	</Design.DataContext>
	<Panel>
		<StackPanel VerticalAlignment="Center">
			<ItemsControl Items="{Binding Asks}"
						  VerticalAlignment="Bottom">
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<Grid ColumnDefinitions="*,*"
							  Margin="0">
							<ProgressBar Maximum="100"
										 Grid.ColumnSpan="2"
										 Minimum="0"
										 CornerRadius="0"
										 VerticalAlignment="Stretch"
										 Background="Transparent"
										 ShowProgressText="False"
										 Foreground="{DynamicResource WindowDefaultBackground}"
										 Value="{Binding Percent}"/>
							<TextBlock Text="{Binding Price}"
									   VerticalAlignment="Center"
									   Margin="3"
									   FontSize="12">
							</TextBlock>
							<TextBlock Text="{Binding Volume}"
									   Grid.Column="1"
									   HorizontalAlignment="Right"
									   VerticalAlignment="Center"
									   FontSize="12"
									   Margin="2"/>
						</Grid>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
			<Border Grid.Row="1"/>
			<TextBlock Grid.Row="1"
					   IsVisible="true"
					   Margin="5"
					   FontWeight="DemiBold"
					   Text="Spead :"/>
			<TextBlock Grid.Row="1"
					   IsVisible="False"
					   HorizontalAlignment="Center"
					   Text="1"/>
			<ItemsControl Items="{Binding Bids}"
						  VerticalAlignment="Top"
						  Grid.Row="2">
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<Grid ColumnDefinitions="*,*"
							  Margin="0">
							<ProgressBar Maximum="100"
										 Grid.ColumnSpan="2"
										 Minimum="0"
										 Foreground="{DynamicResource WindowDefaultBackground}"
										 CornerRadius="0"
										 VerticalAlignment="Stretch"
										 Background="Transparent"
										 ShowProgressText="False"
										 Value="{Binding Percent}"/>
							<TextBlock Text="{Binding Price}"
									   VerticalAlignment="Center"
									   Margin="3"
									   FontSize="12"/>
							<TextBlock Text="{Binding Volume}"
									   Grid.Column="1"
									   HorizontalAlignment="Right"
									   VerticalAlignment="Center"
									   FontSize="12"
									   Margin="2"/>
						</Grid>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
			<ProgressBar Classes="Success"
						 Maximum="100"
						 Grid.ColumnSpan="2"
						 Minimum="0"
						 CornerRadius="0"
						 Margin="5"
						 VerticalAlignment="Stretch"
						 Background="Red"
						 ShowProgressText="False"
						 Height="20"
						 Value="{Binding TotalBids}"/>
			<ProgressBar Classes="Success"
						 Maximum="100"
						 Grid.ColumnSpan="2"
						 Minimum="0"
						 CornerRadius="0"
						 Margin="5"
						 VerticalAlignment="Stretch"
						 Background="Red"
						 ShowProgressText="False"
						 Height="20"
						 Value="{Binding CumuledTotal}"/>
		</StackPanel>
	</Panel>
</UserControl>
