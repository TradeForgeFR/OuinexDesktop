<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" 
             xmlns:vm="clr-namespace:OuinexDesktop.ViewModels"
             xmlns:controls="clr-namespace:OuinexDesktop.Views.Controls"
             x:DataType="vm:MarketWatchViewModel"
             d:DesignHeight="450"
             x:Class="OuinexDesktop.Views.Pages.MarketsPage">
    <Design.DataContext>
        <vm:MarketWatchViewModel/>
    </Design.DataContext>
    <Grid RowDefinitions="Auto, *">
        <Border Margin="0,0,0,0"
                CornerRadius="0"
                Padding="3"
                Classes="Card">
            <StackPanel Orientation="Horizontal">
                <Button Content="Buy"
                        Padding="8,5"
                        Margin="3"/>
                <Separator Width="1"
                           Height="35"
                           Background="#f4f4f4"
                           Margin="0"
                           VerticalAlignment="Stretch"/>
                <Button Content="Sell"
                        Classes="Danger"
                        Padding="8,5"
                        Margin="3"/>
                <Separator Width="1"
                           Height="35"
                           Background="#f4f4f4"
                           Margin="0"
                           VerticalAlignment="Stretch"/>
                <Button Content="Buy"
                        Padding="8,5"
                        Margin="3"/>
                <Separator Width="1.5"
                           Background="#f4f4f4"
                           VerticalAlignment="Stretch"/>
            </StackPanel>
        </Border>
        <controls:MarketWatchWidgets Grid.Row="1"/>
    </Grid>
</UserControl>
