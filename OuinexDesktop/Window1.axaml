<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		xmlns:charts="using:OuinexDesktop.Charting"
		x:DataType="charts:StockChart"
        x:Class="OuinexDesktop.Window1"
        Title="Window1">
	<Window.DataContext>
		<charts:StockChart/>
	</Window.DataContext>
	
	<Grid RowDefinitions="auto, *">
		<StackPanel Orientation="Horizontal">
			<ComboBox Items="{Binding ChartTypes}"
			  SelectedItem="{Binding SelectedChartType, Mode=TwoWay}"/>
			<Button Command="{Binding AddDatasTestCommand}"
					Content="Generate test datas"/>
		</StackPanel>
		<ContentControl Content="{Binding ChartsArea}"
						Margin="10"
						Grid.Row="1"/>
	</Grid>
</Window>
